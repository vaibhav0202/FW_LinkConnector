<config>    
    <modules>
        <FW_LinkConnector>
            <version>1.0.0</version>
        </FW_LinkConnector>
    </modules>
    <global>
        <models>
            <fw_linkconnector>
                <class>FW_LinkConnector_Model</class>
            </fw_linkconnector>
        </models>
        <blocks>
            <fw_linkconnector>
                <class>FW_LinkConnector_Block</class>
            </fw_linkconnector>
        </blocks>
        <helpers>
            <fw_linkconnector>
                <class>FW_LinkConnector_Helper</class>
            </fw_linkconnector>
        </helpers>
    </global>
    <frontend>
        <events>
            <checkout_onepage_controller_success_action>
                <observers>
                    <fw_linkconnector_order_success>
                        <class>fw_linkconnector/observer</class>
                        <method>onOrderSuccessPageView</method>
                    </fw_linkconnector_order_success>
                </observers>
            </checkout_onepage_controller_success_action>
            <checkout_multishipping_controller_success_action>
                <observers>
                    <fw_linkconnector_order_success>
                        <class>fw_linkconnector/observer</class>
                        <method>onOrderSuccessPageView</method>
                    </fw_linkconnector_order_success>
                </observers>
            </checkout_multishipping_controller_success_action>
        </events>
    </frontend>
</config>